@model IEnumerable<DJobA.Models.Category>
@{
    ViewBag.Title = "Home Page";
    <head>
        <style>
            .con {
                background-image: url('../../photo/laymn2.jpg');
                height: 400px;
                width: 100%;
                position: relative;
                background-position: center;
                background-repeat: no-repeat;
                background-size: cover;
                margin-left: auto;
                margin-right: auto;
                border-radius: 50px;
            }

            .lay {
                height: 400px;
                width: 100%;
                background-color: rgba(59, 59, 59, 0.6);
                font-family: Bahnschrift;
                border-radius: 50px;
            }

            .text {
                font-size: 30px;
                font-family: 'Berlin Sans FB';
                color: #ffffff;
            }

            .z {
                font-size: 30px;
                font-family: 'Berlin Sans FB';
                color: #0055d9;
            }

            .zz {
                font-size: 30px;
                font-family: 'Berlin Sans FB';
                color: #ffffff;
            }
        </style>
    </head>
}

<div class="jumbotron-fluid con ">

    <div class="jumbotron lay">

        <br /><br /><br />
        <center>
            <b class="lead text" style="font-size:30px;">Welcome to</b>
            <b class="lead text" style="font-size:30px;"> <span class="z">D</span>-Joba</b>  <br />
            <p class="lead text">Community for Designer and Brogramer </p>



            <p style="display:inline-block;"><a href="~/Views/Login.cshtml" class="btn btn-primary btn-lg">Login &raquo;</a></p>
            <p style="display:inline-block;"><a href="~/Views/Register.cshtml" class="btn btn-primary btn-lg">Join us &raquo;</a></p>
        </center>
    </div>

</div>


<br />

    @foreach (var item in Model)
    {
        <h3 class=" alert alert-dismissible alert-primary text-center" 
            style="background-color:#007bff; color:white;" >@Html.DisplayFor(modelItem => item.CategoryJob)</h3>
        <div class="card-body">
            <h5 class="card-title">@Html.DisplayFor(modelItem => item.JobType)</h5>
            <div class="row">
                @foreach (var sitem in item.Job)
                {
                    
                <div class="col-md-3  card" style="display:inline-block; margin-top:10px; margin-left:10px; height:auto;">

                    <h5 class="card-header">@Html.DisplayFor(modelItem => sitem.JobTitle)</h5>
                    <div class="card-body">

                        <h6 class="card-subtitle text-muted">@Html.DisplayFor(modelItem => sitem.JobDescribtion)</h6>
                    </div>
                    <img style="height: 200px; width: 100%; display: block;" src="~/Uploads/@sitem.JobImage" alt="Card image">
                    <center>
                        <br />

                        @Html.ActionLink("Apply For This Job", "Details", new { JobId = sitem.Id }, new { @class = "btn btn-primary" })
                        <br />
                        <br />
                    </center>

                </div>

                        }
                    </div>

                </div>
            }


                <div class="row">
                    <div class="col-md-4">
